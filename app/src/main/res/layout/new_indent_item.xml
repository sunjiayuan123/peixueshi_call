<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/indent_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号：1234567890982"
        android:textSize="@dimen/sp_15"
        android:layout_marginBottom="@dimen/dp_8"
        android:textColor="@color/text_common_gray_new"/>

    <RelativeLayout
        android:id="@+id/indent_rl"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_wangke_leixing">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/new_order"
            android:layout_toLeftOf="@+id/indent_img"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/indent_img"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:background="@drawable/my_list_ic_caozuo" />

    </RelativeLayout>
    <TextView
        android:id="@+id/relevance"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/indent_mark"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/shape_text_blue"
        android:gravity="center"
        android:text="关联"
        android:textColor="@color/home_top_blue"
        android:textSize="@dimen/sp_15"
        android:layout_marginBottom="@dimen/dp_20"/>

</RelativeLayout>