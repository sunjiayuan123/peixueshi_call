<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_trans_corner"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp" >


        <TextView
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_11"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/cancel"
            android:textColor="@color/home_top_blue" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_11"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/sure"
            android:textColor="@color/home_top_blue" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.peixueshi.crm.view.wheel.WheelView
            android:id="@+id/provinceWheel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.peixueshi.crm.view.wheel.WheelView
            android:id="@+id/citiesWheel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.peixueshi.crm.view.wheel.WheelView
            android:visibility="gone"
            android:id="@+id/countiesWheel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>