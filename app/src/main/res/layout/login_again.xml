<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_trans_corner"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">


    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="提示"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:textColor="@color/text_common_balck"/>
    <TextView android:id="@+id/tv_to_bind_warn"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/login_again"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:textColor="@color/text_common_gray"/>
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp">


        <TextView android:id="@+id/tv_create"
            android:layout_width="106dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="确定"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_red_corner"
            />
    </RelativeLayout>
</LinearLayout>