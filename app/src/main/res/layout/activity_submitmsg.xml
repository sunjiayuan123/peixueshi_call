<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SubmitMesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="11dp"
        android:layout_height="21dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="33dp"
        android:src="@mipmap/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="完善资料"
            android:textColor="@color/textcentercolor"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.peixueshi.crm.app.view.CircularImage
            android:id="@+id/iv_choosegirl"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="62dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/touxiang_ziliao_boy" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_nick"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="65dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="昵称"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="17sp" />



    <TextView
        android:id="@+id/tv_comein"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_button_round"
        android:gravity="center"
        android:text="进入mini"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

