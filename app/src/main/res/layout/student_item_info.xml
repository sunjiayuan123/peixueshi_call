<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_85"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_iv_user_call"
        android:layout_width="@dimen/dp_45"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_user_call"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/selector_home_call_user"
            android:clickable="true"
            android:focusable="false" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_tv_user_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/re_iv_user_call">

        <TextView
            android:id="@+id/tv_user_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_16" />

        <ImageView
            android:id="@+id/iv_copy_phone"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toRightOf="@id/tv_user_number"
            android:background="@drawable/copy_phone"
            android:clickable="true"
            android:focusable="false" />

        <TextView
            android:id="@+id/tv_login_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_number"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="登录次数"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_user_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_number"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_toRightOf="@id/tv_login_count"
            android:text="成交金额"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_login_count"
            android:layout_marginBottom="@dimen/dp_5"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:text="备注"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dp_16"
            android:visibility="gone" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_5"
        android:ellipsize="end"
        android:inputType="text"
        android:maxLines="1"
        android:text="创建:"
        android:textColor="@color/common_gray"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toLeftOf="@id/bt_xiangqing"
        android:layout_toRightOf="@id/tv_create"
        android:text="2020-06-03"
        android:textColor="@color/common_gray"
        android:textSize="@dimen/dp_14" />

    <Button
        android:id="@+id/bt_xiangqing"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_text_red"
        android:clickable="true"
        android:focusable="false"
        android:text="电话记录"
        android:textColor="@color/common_red"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_beizhu"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/shape_text_gray"
            android:clickable="true"
            android:focusable="false"
            android:text="备注"
            android:textColor="@color/common_black" />


        <Button
            android:id="@+id/bt_huiku"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/shape_text_red"
            android:clickable="true"
            android:focusable="false"
            android:text="下单"
            android:textColor="@color/common_red" />
    </LinearLayout>
</RelativeLayout>


