<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/dialog_trans_corner"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_beizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="备注时间"
        android:textColor="@color/text_common_gray"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_zuoxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_beizhu"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="坐席"
        android:textColor="@color/text_common_gray"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_goutong_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_17"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="沟通状态"
        android:textColor="@color/corner_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_marginBottom="@dimen/dp_12"
        android:id="@+id/tv_beizhu_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_zuoxi"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="备注"
        android:textColor="@color/text_common_gray"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>

