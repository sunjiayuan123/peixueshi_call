<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
        <TextView android:text="手机号"
            android:id="@+id/tv_phone"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_16"
            android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_lister_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:text="听课时长"
        android:textColor="@color/text_common_gray"
        android:textSize="@dimen/dp_12" />
    <TextView android:text="课件名"
        android:id="@+id/tv_xiangmu"
        android:layout_below="@id/tv_phone"
        android:layout_width="wrap_content"
        android:textColor="@color/common_black"
        android:textSize="@dimen/dp_16"
        android:layout_height="wrap_content"/>
    <TextView android:text="听课时间"
        android:id="@+id/tv_lister_at"
        android:layout_below="@id/tv_xiangmu"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:textColor="@color/text_common_gray"
        android:textSize="@dimen/dp_12"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

