<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView android:id="@+id/tv_number"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_25"
        android:text="NO.2"
        android:gravity="center"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/text_common_balck"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_user_call"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_number"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/user_persion"/>

       <RelativeLayout android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_toRightOf="@id/iv_user_call">
           <TextView android:id="@+id/tv_user_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_5"
               android:textSize="@dimen/dp_16"
               android:maxLines="2"
               android:textColor="@color/common_black"
               android:text="张三"/>
           <TextView android:id="@+id/tv_count"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="bottom"
               android:layout_below="@id/tv_user_name"
               android:layout_alignParentRight="true"
               android:textSize="@dimen/dp_14"
               android:layout_marginTop="@dimen/dp_5"
               android:textColor="@color/common_gray"
               android:layout_marginBottom="5dp"
               android:text="0单"/>

           <TextView
               android:id="@+id/tv_user_money"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/tv_user_name"
               android:layout_marginBottom="@dimen/dp_5"
               android:layout_marginTop="@dimen/dp_5"
               android:text="业绩"
               android:textColor="@color/common_gray"
               android:textSize="@dimen/dp_14" />
       </RelativeLayout>



</RelativeLayout>


