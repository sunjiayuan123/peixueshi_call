<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RealPhoneActivity">

    <RelativeLayout
        android:id="@+id/rl_title_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/home_top_blue">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="拨号方式设置"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/call_types"
        android:textColor="@color/red_f4333c"
        android:layout_marginTop="@dimen/dp_10"
        android:text="当前拨号方式:"
        android:layout_marginStart="@dimen/sp_15"
        android:textSize="@dimen/sp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/sp_15"
        android:text="设置拨号方式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lin_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
    <ImageView
        android:id="@+id/image_one"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_gravity="center_vertical"
        android:background="@drawable/check_no"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"/>
    <TextView
        android:textColor="@color/font_666666"
        android:id="@+id/test_one"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:textSize="@dimen/dp_15"
        android:text="A,本地拨打"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <ImageView
            android:id="@+id/image_two"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:background="@drawable/check_no"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <TextView
            android:textColor="@color/font_666666"
            android:id="@+id/test_two"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:text="A,AXB XAA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <ImageView
            android:id="@+id/image_three"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:background="@drawable/check_no"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <TextView
            android:textColor="@color/font_666666"
            android:id="@+id/test_three"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:text="B,AXB XSA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>