<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:textColor="@color/text_common_balck"
        android:text="@string/manager_name"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical"
        android:background="@drawable/btn_edittext_bg">
    <EditText
        android:id="@+id/login_et_phone"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@null"
        android:textCursorDrawable="@drawable/my_cursor"
        android:gravity="center_vertical"
        android:hint="账号"
        android:textColorHint="@color/text_common_gray"
        android:drawableLeft="@drawable/ic_phone"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:drawableRight="@drawable/et_text_delete"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/text_common_balck"
        android:textSize="17sp" />
<View android:layout_width="310dp"
    android:layout_height="0.5dp"
    android:gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:background="@color/solide_gray"/>
    <EditText
        android:id="@+id/login_et_pw"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:textCursorDrawable="@drawable/my_cursor"
        android:hint="密码"
        android:textColorHint="@color/text_common_gray"
        android:textColor="@color/text_common_balck"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_suo"
        android:drawableRight="@drawable/yanjing_nor"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:singleLine="true"
        android:password="true"
        android:textSize="17sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_forget_pw"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:text="忘记密码"
            android:visibility="invisible"
            android:textColor="@color/login_black_trans"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_regis"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:background="@null"
                android:text="自动登录"
                android:visibility="invisible"
                android:textColor="@color/login_black_trans"
                android:textSize="17sp" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_user_login"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@drawable/order_select_up_login"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="38dp"
        android:gravity="bottom"
        android:layout_marginBottom="47dp"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="28dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:text="快速登录"
            android:textColor="@color/textcolor"
            android:textSize="17sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/dsf_denglu_qq"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/dsf_denglu_vx"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/dsf_denglu_wb"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/dsf_denglu_zfb"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

