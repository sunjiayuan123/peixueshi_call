            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp">
                <TextView android:text="意向程度:"
                    android:id="@+id/tv_yixiang"
                    android:textColor="@color/text_common_gray"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_height="@dimen/dp_40"/>
                <TextView android:text="C"
                    android:layout_toRightOf="@id/tv_yixiang"
                    android:id="@+id/tv_yixiang_text"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/text_common_balck"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_16"
                    android:layout_height="@dimen/dp_40"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp">
                <TextView android:text="备        注:"
                    android:id="@+id/tv_beizhu"
                    android:textColor="@color/text_common_gray"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_height="@dimen/dp_40"/>
                <TextView android:text="现在不办理"
                    android:layout_toRightOf="@id/tv_beizhu"
                    android:id="@+id/tv_biezhu_text"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/text_common_balck"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_16"
                    android:layout_height="@dimen/dp_40"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp">
                <TextView android:text="创建时间:"
                    android:id="@+id/tv_time"
                    android:textColor="@color/text_common_gray"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_height="@dimen/dp_40"/>
                <TextView android:text="2020.02.03"
                    android:layout_toRightOf="@id/tv_time"
                    android:id="@+id/tv_creat_time"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/text_common_balck"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_16"
                    android:layout_height="@dimen/dp_40"/>

