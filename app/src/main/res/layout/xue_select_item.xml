<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_pay_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/exam_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试类型:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/sp_14"
           />

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/exam_type_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_toEndOf="@+id/exam_type"
            android:textColor="@color/text_common_gray"
            android:textSize="@dimen/sp_14"
             />

        <TextView
            android:visibility="gone"
            android:id="@+id/enter_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_type"
            android:layout_marginTop="@dimen/dp_6"
            android:text="报考区域:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:visibility="gone"
            android:id="@+id/order_number_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_type"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toEndOf="@+id/enter_area"
            android:text="河南省"
            android:textColor="@color/text_common_gray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_xiangmu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_area"
            android:layout_marginTop="@dimen/dp_6"
            android:lines="1"
            android:maxLines="1"
            android:text="学校名称:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/xiangmu_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_area"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/tv_xiangmu_name"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/text_common_gray"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/order_pay_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_xiangmu_name"
            android:layout_marginTop="@dimen/dp_6"
            android:lines="1"
            android:maxLines="1"
            android:text="学       历:"
            android:textColor="@color/common_black" />

        <TextView
            android:id="@+id/postion_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_xiangmu_name"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/order_pay_leixing"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="河南"
            android:textColor="@color/text_common_gray"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/order_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_pay_leixing"
            android:layout_marginTop="@dimen/dp_6"
            android:lines="1"
            android:maxLines="1"
            android:text="专业名称:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_pay_leixing"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/order_pay_type"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="磊"
            android:textColor="@color/text_common_gray"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_pay_type"
            android:layout_marginTop="@dimen/dp_6"
            android:lines="1"
            android:maxLines="1"
            android:text="姓       名:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/stu_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_pay_type"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/stu_name"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="磊"
            android:textColor="@color/text_common_gray"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/xue_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stu_name"
            android:layout_marginTop="@dimen/dp_6"
            android:lines="1"
            android:maxLines="1"
            android:text="身份证号:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/xue_card_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stu_name"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/census"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="磊"
            android:textColor="@color/text_common_gray"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/census"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xue_card"
            android:layout_marginTop="@dimen/dp_6"
            android:lines="1"
            android:maxLines="1"
            android:text="户       籍:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/census_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xue_card"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/census"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="磊"
            android:textColor="@color/text_common_gray"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/order_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/census"
            android:layout_marginTop="@dimen/dp_6"
            android:lines="1"
            android:maxLines="1"
            android:text="价       格:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_toRightOf="@id/order_pay_money"
            android:id="@+id/et_price"
            android:layout_width="@dimen/dp_80"
            android:inputType="number"
            android:paddingStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_below="@id/census"
            android:background="@drawable/btn_edittext_corner"
            android:layout_height="@dimen/dp_22"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/common_black"
            android:hint="0"/>
        <TextView
            android:id="@+id/remove_pro"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_below="@id/census"
            android:layout_toEndOf="@+id/et_price"
            android:textColor="@color/sdk_color_common_red"
            android:text="移除该项目"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>
