<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    tools:context=".newactivity.NewHomeDetailsActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/order_left" />

        <TextView
            android:id="@+id/hand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="详情"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/dialog_trans_corner">

        <TextView android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:maxLines="1"
            android:lines="1"
            android:textColor="@color/radio_black"
            android:text="基本详情"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"/>


        <TextView android:id="@+id/client_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:maxLines="1"
            android:lines="1"
            android:textColor="@color/radio_black"
            android:text="客       户    ID："
            android:layout_below="@id/details"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/postion_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details"
            android:layout_toRightOf="@id/client_id"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_id"
            android:lines="1"
            android:maxLines="1"
            android:text="手       机    号："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_id"
            android:layout_toRightOf="@id/phone"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView android:id="@+id/xiangmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/radio_black"
            android:text="项              目:"
            android:maxLines="1"
            android:lines="1"
            android:layout_below="@id/phone"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_toRightOf="@id/xiangmu"
            android:lines="1"
            android:maxLines="1"
            android:text="-"
            android:ellipsize = "end"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView android:id="@+id/heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:maxLines="1"
            android:lines="1"
            android:textColor="@color/radio_black"
            android:text="意      向     度:"
            android:layout_below="@id/xiangmu"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/heat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xiangmu"
            android:layout_toRightOf="@id/heat"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="-"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heat"
            android:lines="1"
            android:maxLines="1"
            android:text="机  会   来  源:"
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/source_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heat"
            android:layout_toRightOf="@id/source"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />


        <TextView
            android:id="@+id/sky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/source"
            android:lines="1"
            android:maxLines="1"
            android:text="剩余回库天数："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/sky_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/source"
            android:layout_toRightOf="@id/sky"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/consult_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sky"
            android:lines="1"
            android:maxLines="1"
            android:text="首次咨询时间："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/consult_time_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sky"
            android:layout_toRightOf="@id/consult_time"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/finally_consult_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consult_time"
            android:lines="1"
            android:maxLines="1"
            android:text="最后咨询时间："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/finally_consult_time_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consult_time"
            android:layout_toRightOf="@id/finally_consult_time"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/bz_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/finally_consult_time"
            android:lines="1"
            android:maxLines="1"
            android:text="备   注  时  间："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/bz_time_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/finally_consult_time"
            android:layout_toRightOf="@id/bz_time"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView android:id="@+id/order_bz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/radio_black"
            android:text="备              注:"
            android:maxLines="1"
            android:lines="1"
            android:layout_below="@id/bz_time"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"/>

        <TextView
            android:id="@+id/bz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_bz"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize = "end"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14"
            android:layout_below="@+id/bz_time"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/dialog_trans_corner">

        <TextView
            android:id="@+id/details_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:lines="1"
            android:maxLines="1"
            android:text="客户详情"
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_details"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:lines="1"
            android:maxLines="1"
            android:text="姓         名："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_details"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/name"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:lines="1"
            android:maxLines="1"
            android:text="性         别："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/sex"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sex"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:lines="1"
            android:maxLines="1"
            android:text="微         信："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/wx_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sex"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/wx"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="-"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/xueli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wx"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:lines="1"
            android:maxLines="1"
            android:text="学         历："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/xueli_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wx"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/xueli"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="-"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xueli"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:lines="1"
            android:maxLines="1"
            android:text="专         业："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/major_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xueli"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/major"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />


        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/major"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_20"
            android:lines="1"
            android:maxLines="1"
            android:text="报考区域："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/area_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/major"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/area"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/has_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/dialog_trans_corner">

        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:lines="1"
            android:maxLines="1"
            android:text="下单记录"
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />


        <TextView
            android:id="@+id/client_ida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:lines="1"
            android:maxLines="1"
            android:text="客  户  ID："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/client_ida_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/client_ida"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:visibility="gone"
            android:id="@+id/xiamua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_ida"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:lines="1"
            android:maxLines="1"
            android:text="项        目:"
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:visibility="gone"
            android:id="@+id/xiamua_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_ida"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/xiamua"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:visibility="gone"
            android:id="@+id/record_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xiamua"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:lines="1"
            android:maxLines="1"
            android:text="下单金额："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:visibility="gone"
            android:id="@+id/record_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xiamua"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/record_money"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="-"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:visibility="gone"
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_money"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:lines="1"
            android:maxLines="1"
            android:text="学         历："
            android:textColor="@color/radio_black"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:visibility="gone"
            android:id="@+id/record_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_time"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/record_time"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="-"
            android:textColor="@color/font_666666"
            android:textSize="@dimen/dp_14" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv"
            android:layout_below="@+id/record_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/lin_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center"
            android:layout_below="@+id/rlv">
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bottom_img"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
</ScrollView>