<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:context=".activity.LoginActivity">
    <TextView
        android:id="@+id/tv_school"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="left"
        android:text="800"
        android:layout_centerVertical="true"
        android:textColor="@color/common_black"
        android:textSize="@dimen/dp_16" />
    <TextView android:id="@+id/tv_banxing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_school"
        android:layout_toLeftOf="@+id/tv_dengji"
        android:layout_centerVertical="true"
        android:textSize="@dimen/dp_16"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/common_black"
        android:text="2020执业药师名师分享班"/>

    <TextView
        android:id="@+id/tv_dengji"
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/et_price"
        android:gravity="left"
        android:text="800"
        android:layout_centerVertical="true"
        android:textColor="@color/common_black"
        android:textSize="@dimen/dp_16" />
    <EditText
        android:id="@+id/et_price"
        android:layout_width="@dimen/dp_80"
        android:inputType="number"
        android:layout_marginLeft="@dimen/dp_10"
        android:padding="6dp"
        android:background="@drawable/btn_edittext_corner"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:hint="0"
        android:textColor="@color/common_black"
        android:textSize="@dimen/dp_16" />
</RelativeLayout>

