<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_user__info_count"
        android:layout_below="@id/ll_user_yeji_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView android:id="@+id/tv_xiaozu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"
                android:textColor="@color/mine_color_blue_number"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业绩"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="5dp"
                android:textColor="@color/mine_color_text_gray"/>
        </LinearLayout>
        <ImageView android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_60"
            android:background="@color/mine_color_line_gray"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_xiaozu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/mine_color_blue_number"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交单数"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="5dp"
                android:textColor="@color/mine_color_text_gray"/>
        </LinearLayout>
        <ImageView android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_60"
            android:background="@color/mine_color_line_gray"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView android:id="@+id/tv_xiaozu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"
                android:textColor="@color/mine_color_blue_number"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拨打量"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="5dp"
                android:textColor="@color/mine_color_text_gray"/>
        </LinearLayout>
        <ImageView android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_60"
            android:background="@color/mine_color_line_gray"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView android:id="@+id/tv_xiaozu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textSize="@dimen/dp_16"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="@color/mine_color_blue_number"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="5dp"
                android:textColor="@color/mine_color_text_gray"/>
        </LinearLayout>
    </LinearLayout>