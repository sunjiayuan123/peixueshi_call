<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_64"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_marginStart="@dimen/dp_16"

        android:id="@+id/iv_user_call"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/call_phone"
        android:clickable="true"
        android:focusable="false" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_user_call">

        <TextView
            android:id="@+id/customer_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:text="客户ID:"
            android:textColor="@color/common_black"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/customer_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_toEndOf="@+id/customer_text"
            android:gravity="center_vertical"
            android:textColor="@color/common_black"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_user_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_below="@+id/customer_text"
            android:gravity="center_vertical"
            android:textColor="@color/common_black"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_copy_phone"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toRightOf="@id/tv_user_number"
            android:background="@drawable/copy_phone"
            android:clickable="true"
            android:focusable="false"
            android:visibility="gone" />

        <TextView
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center_vertical"
            android:id="@+id/tv_user_xinagmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_text"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tv_user_number"
            android:text="职业药师"
            android:textColor="@color/newcolor_gray"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
         <TextView
             android:textColor="@color/newcolor_bule"
             android:id="@+id/place_order"
             android:text="下单"
             android:gravity="center_vertical"
             android:layout_gravity="center_vertical"
             android:textSize="@dimen/sp_12"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/dp_30"/>
        <TextView
            android:id="@+id/bt_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/newcolor_bule"
            android:textSize="@dimen/sp_12"
            android:layout_marginStart="@dimen/sp_12"
            android:text="备注" />
        <TextView
            android:id="@+id/bt_huiku"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:clickable="true"
            android:focusable="false"
            android:text="回库"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/newcolor_bule"
            android:textSize="@dimen/sp_12"
            android:layout_marginStart="@dimen/sp_12"  />
        <TextView
            android:layout_marginEnd="@dimen/dp_16"
            android:id="@+id/bt_xiangqing"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/tv_user_number"
            android:layout_marginLeft="@dimen/dp_10"
            android:clickable="true"
            android:focusable="false"
            android:text="详情"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/newcolor_bule"
            android:textSize="@dimen/sp_12"
            android:layout_marginStart="@dimen/sp_12" />


    </LinearLayout>
</RelativeLayout>


