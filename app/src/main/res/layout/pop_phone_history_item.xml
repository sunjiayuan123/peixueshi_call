<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:gravity="center_vertical">
        <TextView android:text="所在项目"
            android:id="@+id/tv_xiangmu"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/dp_110"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_14"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>
        <TextView android:text="所在小组"
            android:id="@+id/tv_xiaozu"
            android:layout_toRightOf="@id/tv_xiangmu"
            android:layout_toLeftOf="@+id/tv_zuoxi"
            android:layout_width="match_parent"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_14"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_zuoxi"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_zuoxi"
            android:text="接待坐席"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dp_14" />
    </RelativeLayout>

