    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/mine_top_bg" />


    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/white"
        android:text="扫一扫"/>
    <RelativeLayout
        android:id="@+id/rl_user_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <com.peixueshi.crm.ui.widget.CircleImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/personal_user_img" />
    </RelativeLayout>
    <TextView android:id="@+id/tv_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_18"
        android:layout_marginTop="106dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <TextView android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请重新登录"
        android:textSize="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:textColor="#80ffffff"/>
    <LinearLayout android:id="@+id/ll_user_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="160dp"
        android:background="@color/transparent1">
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView android:id="@+id/tv_xiaozu_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="第一事业部第一军团一部招生一组"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:maxLines="2"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/white"/>
           <!-- <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属小组"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/white"/>-->
        </LinearLayout>
        <ImageView android:layout_width="0.5dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"/>
    <LinearLayout android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <TextView android:id="@+id/tv_xiangmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法律资格证"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/white"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属项目"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/white"/>
    </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_below="@id/ll_user_group"/>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_92"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/view_line"
        android:layout_height="wrap_content">

     <!--   <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
