                   android:layout_height="match_parent" />
           </LinearLayout>-->
    </android.support.design.widget.CoordinatorLayout>


    <LinearLayout android:id="@+id/ll_user_yeji_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/transparnet"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@id/coordinator_layout">
        <TextView android:layout_width="80dp"
            android:layout_height="@dimen/dp_50"
            android:textSize="@dimen/dp_16"
            android:gravity="center"
            android:textColor="@color/mine_color_blue"
            android:text="今日"/>
        <TextView android:layout_width="80dp"
            android:layout_height="@dimen/dp_50"
            android:textSize="@dimen/dp_16"
            android:gravity="center"
            android:textColor="@color/mine_color_blue"
            android:text="本周"/>
        <TextView android:layout_width="80dp"
            android:layout_height="@dimen/dp_50"
            android:textSize="@dimen/dp_16"
            android:gravity="center"
            android:textColor="@color/mine_color_blue"
            android:text="本月"/>
    </LinearLayout>


    <LinearLayout android:id="@+id/ll_user__info_count"
        android:layout_below="@id/ll_user_yeji_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_attache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/mine_color_blue_number"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业绩"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="5dp"
                android:textColor="@color/mine_color_text_gray"/>
        </LinearLayout>
        <ImageView android:layout_width="0.5dp"
        android:layout_height="@dimen/dp_60"
        android:background="@color/mine_color_line_gray"
        android:layout_gravity="center_horizontal"/>
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_attache_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/mine_color_blue_number"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交单数"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="5dp"
                android:textColor="@color/mine_color_text_gray"/>
        </LinearLayout>
        <ImageView android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_60"
            android:background="@color/mine_color_line_gray"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView android:id="@+id/tv_call_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"
                android:textColor="@color/mine_color_blue_number"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拨打量"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="5dp"
                android:textColor="@color/mine_color_text_gray"/>
        </LinearLayout>
        <ImageView android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_60"
            android:background="@color/mine_color_line_gray"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textSize="@dimen/dp_16"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="@color/mine_color_blue_number"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="5dp"
                android:textColor="@color/mine_color_text_gray"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_below="@id/ll_user__info_count"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rl_put_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <ImageView android:id="@+id/iv_icon_order"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_dingdan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_icon_order"
                android:text="下单"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/mine_color_text_gray"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_caozuo" />
        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/mine_color_line_gray"/>
        <RelativeLayout android:id="@+id/rl_jihui"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView android:id="@+id/iv_icon_jihui"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:background="@drawable/my_list_ic_chuangjian"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_icon_jihui"
            android:text="机会创建"
            android:textSize="@dimen/dp_16"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/mine_color_text_gray"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/my_list_ic_caozuo" />
    </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/mine_color_line_gray"/>
        <RelativeLayout android:id="@+id/rl_call_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <ImageView android:id="@+id/iv_icon_call"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_tonghua"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_icon_call"
                android:text="通话记录"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/mine_color_text_gray"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_caozuo" />
        </RelativeLayout>
        <View android:id="@+id/view_line4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/mine_color_line_gray"/>
        <RelativeLayout android:id="@+id/rl_jilu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <ImageView android:id="@+id/iv_icon_jilu"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_tingke"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_icon_jilu"
                android:text="听课记录"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/mine_color_text_gray"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_caozuo" />
        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/mine_color_line_gray"/>
        <RelativeLayout android:id="@+id/rl_modify_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <ImageView android:id="@+id/iv_icon_modify_pass"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_xiugai"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_icon_modify_pass"
                android:text="修改密码"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/mine_color_text_gray"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_caozuo"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/mine_color_line_gray"/>
        <RelativeLayout android:id="@+id/rl_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <ImageView android:id="@+id/iv_icon_exit_login"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_ituichu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_icon_exit_login"
                android:text="退出登录"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/mine_color_text_gray"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/my_list_ic_caozuo"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/mine_color_line_gray"/>
        <RelativeLayout android:id="@+id/rl_sound_local"
